<Page x:Class="cpMgr.PageTimeoutSet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cpMgr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded" Unloaded="Page_Unloaded"
      Title="SET TIMEOUT">

    <Grid Margin="194,119,206,121">
        <GroupBox Header="Timeout Setting" Width="400" Height="200">
            <Canvas>
                <Label Content="Logout Time" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="43" Canvas.Top="32"/>
                <TextBox x:Name="txtLogoutTime" Height="23" TextAlignment="Right" Text="" Width="120" GotFocus="TextBox_GotFocus" Canvas.Left="141" Canvas.Top="35"/>
                <Label Content="sec" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="266" Canvas.Top="35"/>
                <Button Content="Save" Height="23" Width="120" Click="btnSave_Click" Canvas.Left="141" Canvas.Top="114"/>
            </Canvas>
        </GroupBox>
    </Grid>
</Page>
